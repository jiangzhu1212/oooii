<?xml version="1.0" encoding="utf-8"?>
<!--
  ============================================================================
  A Custom Build Rule for using DirectX's fxc.exe to compile shaders.
  ============================================================================
  NOTE: For dependencies to behave correctly in VS2010 SP1, ALL dependencies 
  must be both in the project and listed as an Additional Dependency in the 
  build rule. http://www.virtualdub.org/blog/pivot/entry.php?id=334 The jist
  is there are two dependency checkers: IDE & MSBuild and they don't behave 
  the same. The author's fix involves hard-coding a specific path/file in 
  the target, which doesn't seem generic enough, so the described changes
  where not included.
 -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <PropertyPageSchema
      Include="$(MSBuildThisFileDirectory)$(MSBuildThisFileName).xml" />
    <AvailableItemName
      Include="FXC">
      <Targets>_FXC</Targets>
    </AvailableItemName>
  </ItemGroup>
  <UsingTask
    TaskName="FXC"
    TaskFactory="XamlTaskFactory"
    AssemblyName="Microsoft.Build.Tasks.v4.0">
    <Task>$(MSBuildThisFileDirectory)$(MSBuildThisFileName).xml</Task>
  </UsingTask>
  <Target
    Name="_FXC"
    BeforeTargets="$(FXCBeforeTargets)"
    AfterTargets="$(FXCAfterTargets)"
    Condition="'@(FXC)' != ''"
    DependsOnTargets="$(FXCDependsOn);ComputeFXCOutput"
    Outputs="%(FXC.Outputs)"
    Inputs="%(FXC.Identity);%(FXC.AdditionalDependencies);$(MSBuildProjectFile)">
    <ItemGroup
      Condition="'@(SelectedFiles)' != ''">
      <FXC
        Remove="@(FXC)"
        Condition="'%(Identity)' != '@(SelectedFiles)'" />
    </ItemGroup>
    <ItemGroup>
      <FXC_tlog
        Include="%(FXC.Outputs)"
        Condition="'%(FXC.Outputs)' != '' and '%(FXC.ExcludedFromBuild)' != 'true'">
        <Source>@(FXC, '|')</Source>
      </FXC_tlog>
    </ItemGroup>
    <Message
      Importance="High"
      Text="%(FXC.ExecutionDescription)" />
    <WriteLinesToFile
      Condition="'@(FXC_tlog)' != '' and '%(FXC_tlog.ExcludedFromBuild)' != 'true'"
      File="$(IntDir)$(ProjectName).write.1.tlog"
      Lines="^%(FXC_tlog.Source);@(FXC_tlog-&gt;'%(Fullpath)')" />
    <WriteLinesToFile
      Condition="'@(FXC_tlog)' != '' and '%(FXC_tlog.ExcludedFromBuild)' != 'true'"
      File="$(IntDir)$(ProjectName).read.1.tlog"
      Lines="^%(FXC_tlog.FullPath);%(FXC_tlog.Inputs)" />
    <FXC
      Condition="'@(FXC)' != '' and '%(FXC.ExcludedFromBuild)' != 'true'"
      CommandLineTemplate="%(FXC.CommandLineTemplate)"
      NoLogo="%(FXC.NoLogo)"
      Includes="%(FXC.Includes)"
      Defines="%(FXC.Defines)"
      EntryPoint="%(FXC.EntryPoint)"
      FXCOutput="%(FXC.FXCOutput)"
      ByteCodeVariableName="%(FXC.ByteCodeVariableName)"
      ShaderModel="%(FXC.ShaderModel)"
      DebugInformationFormat="%(FXC.DebugInformationFormat)"
      AdditionalOptions="%(FXC.AdditionalOptions)"
      EchoOff="true"      
      Inputs="%(FXC.Identity)" />
  </Target>
  <PropertyGroup>
    <ComputeLinkInputsTargets>
            $(ComputeLinkInputsTargets);
            ComputeFXCOutput;
          </ComputeLinkInputsTargets>
    <ComputeLibInputsTargets>
            $(ComputeLibInputsTargets);
            ComputeFXCOutput;
          </ComputeLibInputsTargets>
  </PropertyGroup>
  <Target
    Name="ComputeFXCOutput"
    Condition="'@(FXC)' != ''">
    <ItemGroup>
      <FXCDirsToMake
        Condition="'@(FXC)' != '' and '%(FXC.ExcludedFromBuild)' != 'true'"
        Include="%(FXC.Outputs)" />
      <Link
        Include="%(FXCDirsToMake.Identity)"
        Condition="'%(Extension)'=='.obj' or '%(Extension)'=='.res' or '%(Extension)'=='.rsc' or '%(Extension)'=='.lib'" />
      <Lib
        Include="%(FXCDirsToMake.Identity)"
        Condition="'%(Extension)'=='.obj' or '%(Extension)'=='.res' or '%(Extension)'=='.rsc' or '%(Extension)'=='.lib'" />
      <ImpLib
        Include="%(FXCDirsToMake.Identity)"
        Condition="'%(Extension)'=='.obj' or '%(Extension)'=='.res' or '%(Extension)'=='.rsc' or '%(Extension)'=='.lib'" />
    </ItemGroup>
    <MakeDir
      Directories="@(FXCDirsToMake-&gt;'%(RootDir)%(Directory)')" />
  </Target>
</Project>
