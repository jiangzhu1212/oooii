<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions xmlns="clr-namespace:Microsoft.Build.Framework.XamlTypes;assembly=Microsoft.Build.Framework" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:transformCallback="Microsoft.Cpp.Dev10.ConvertPropertyCallback">
  <Rule
    Name="FXC"
    PageTemplate="tool"
    DisplayName="FXC"
    Order="200">
    <Rule.DataSource>
      <DataSource
        Persistence="ProjectFile"
        ItemType="FXC" />
    </Rule.DataSource>
    <Rule.Categories>
      <Category
        Name="General">
        <Category.DisplayName>
          <sys:String>General</sys:String>
        </Category.DisplayName>
      </Category>
      <Category
        Name="Command Line"
        Subtype="CommandLine">
        <Category.DisplayName>
          <sys:String>Command Line</sys:String>
        </Category.DisplayName>
      </Category>
    </Rule.Categories>
    <StringListProperty
      Name="Inputs"
      Category="Command Line"
      IsRequired="true"
      Switch=" ">
      <StringListProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="FXC"
          SourceType="Item" />
      </StringListProperty.DataSource>
    </StringListProperty>
    <BoolProperty
      Name="NoLogo"
      HelpContext="0"
      DisplayName="Suppress Startup Banner"
      Description="Suppresses the display of the sign-on banner when the compiler starts up and display of information messages during compiling. (/nologo)"
      Switch="/nologo" />
    <StringListProperty
      Name="Includes"
      HelpContext="0"
      DisplayName="Additional Include Directories"
      Description="Specifies one or more directories to add to the include path; use semi-colon delimited list if more than one. (/I[path])"
      Switch="/I [value]" />
    <StringListProperty
      Name="Defines"
      HelpContext="0"
      DisplayName="Defines"
      Description="Specifies one or more preprocessor defines. (/D[macro])"
      Switch="/D[value]" />
    <StringProperty
      Name="EntryPoint"
      HelpContext="0"
      DisplayName="Entry Point"
      Description="The name of the root function for the shader. (/E [entry])"
      Switch="/E [value]" />
    <StringProperty
      Name="FXCOutput"
      HelpContext="0"
      DisplayName="Output"
      Description="Specifies the output filename to which the inputs will be compiled. (/Fh [value])"
      Switch="&quot;[value]&quot;" />
    <StringProperty
      Name="ByteCodeVariableName"
      HelpContext="0"
      DisplayName="Byte Code Variable Name"
      Description="Specifies the name used for the bytecode buffer generated in the output file. (/Vn [value])"
      Switch="/Vn [value]" />
    <EnumProperty
      Name="ShaderModel"
      HelpContext="0"
      DisplayName="Shader Model"
      Description="The shader model target of the source.">
      <EnumValue
        Name="vs_3_0"
        DisplayName="SM3 Vertex Shader"
        Switch="/T vs_3_0" />
      <EnumValue
        Name="ps_3_0"
        DisplayName="SM3 Pixel Shader"
        Switch="/T ps_3_0" />
      <EnumValue
        Name="vs_4_0"
        DisplayName="SM4 Vertex Shader"
        Switch="/T vs_4_0" />
      <EnumValue
        Name="gs_4_0"
        DisplayName="SM4 Geometry Shader"
        Switch="/T gs_4_0" />
      <EnumValue
        Name="ps_4_0"
        DisplayName="SM4 Pixel Shader"
        Switch="/T ps_4_0" />
      <EnumValue
        Name="cs_4_0"
        DisplayName="SM4 Compute Shader"
        Switch="/T cs_4_0" />
      <EnumValue
        Name="vs_5_0"
        DisplayName="SM5 Vertex Shader"
        Switch="/T vs_5_0" />
      <EnumValue
        Name="hs_5_0"
        DisplayName="SM5 Hull Shader"
        Switch="/T hs_5_0" />
      <EnumValue
        Name="ds_5_0"
        DisplayName="SM5 Domain Shader"
        Switch="/T ds_5_0" />
      <EnumValue
        Name="gs_5_0"
        DisplayName="SM5 Geometry Shader"
        Switch="/T gs_5_0" />
      <EnumValue
        Name="ps_5_0"
        DisplayName="SM5 Pixel Shader"
        Switch="/T ps_5_0" />
      <EnumValue
        Name="cs_5_0"
        DisplayName="SM5 Compute Shader"
        Switch="/T cs_5_0" />
    </EnumProperty>
    <EnumProperty
      Name="DebugInformationFormat"
      HelpContext="0"
      DisplayName="Debug Information Format"
      Description="Specifies the type of debugging information generated by the compiler. /Zi is required for PIX to show HLSL source.">
      <EnumValue
        Name="0"
        DisplayName="Disabled" />
      <EnumValue
        Name="1"
        DisplayName="Program Database"
        Switch="/Zi" />
    </EnumProperty>
    <StringProperty
      Name="CommandLineTemplate"
      DisplayName="Command Line"
      Visible="False"
      IncludeInCommandLine="False" />
    <DynamicEnumProperty
      Name="FXCBeforeTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute Before</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run before.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^FXCBeforeTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    <DynamicEnumProperty
      Name="FXCAfterTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute After</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run after.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^FXCAfterTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType=""
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    <StringListProperty
      Name="Outputs"
      DisplayName="Outputs"
      Visible="False"
      IncludeInCommandLine="False" />
    <StringProperty
      Name="ExecutionDescription"
      DisplayName="Execution Description"
      Visible="False"
      IncludeInCommandLine="False" />
    <StringListProperty
      Name="AdditionalDependencies"
      DisplayName="Additional Dependencies"
      IncludeInCommandLine="False"
      Visible="true" />
    <StringProperty
      Subtype="AdditionalOptions"
      Name="AdditionalOptions"
      Category="Command Line">
      <StringProperty.DisplayName>
        <sys:String>Additional Options</sys:String>
      </StringProperty.DisplayName>
      <StringProperty.Description>
        <sys:String>Additional Options</sys:String>
      </StringProperty.Description>
    </StringProperty>
  </Rule>
  <ItemType
    Name="FXC"
    DisplayName="FXC" />
  <FileExtension
    Name="*.sh"
    ContentType="FXC" />
  <ContentType
    Name="FXC"
    DisplayName="FXC"
    ItemType="FXC" />
</ProjectSchemaDefinitions>