<?xml version="1.0" encoding="utf-8"?>
<!--
  ============================================================================
  A Custom Build Rule for using oFile2cpp to compile binary/text data into C++
  ============================================================================
  NOTE: For dependencies to behave correctly in VS2010 SP1, ALL dependencies 
  must be both in the project and listed as an Additional Dependency in the 
  build rule. http://www.virtualdub.org/blog/pivot/entry.php?id=334 The jist
  is there are two dependency checkers: IDE & MSBuild and they don't behave 
  the same. The author's fix involves hard-coding a specific path/file in 
  the target, which doesn't seem generic enough, so the described changes
  where not included.
 -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <PropertyPageSchema
      Include="$(MSBuildThisFileDirectory)$(MSBuildThisFileName).xml" />
    <AvailableItemName
      Include="File2cpp">
      <Targets>_File2cpp</Targets>
    </AvailableItemName>
  </ItemGroup>
  <UsingTask
    TaskName="File2cpp"
    TaskFactory="XamlTaskFactory"
    AssemblyName="Microsoft.Build.Tasks.v4.0">
    <Task>$(MSBuildThisFileDirectory)$(MSBuildThisFileName).xml</Task>
  </UsingTask>
  <Target
    Name="_File2cpp"
    BeforeTargets="$(File2cppBeforeTargets)"
    AfterTargets="$(File2cppAfterTargets)"
    Condition="'@(File2cpp)' != ''"
    DependsOnTargets="$(File2cppDependsOn);ComputeFile2cppOutput"
    Outputs="%(File2cpp.Outputs)"
    Inputs="%(File2cpp.Identity);%(File2cpp.AdditionalDependencies);$(MSBuildProjectFile)">
    <ItemGroup
      Condition="'@(SelectedFiles)' != ''">
      <File2cpp
        Remove="@(File2cpp)"
        Condition="'%(Identity)' != '@(SelectedFiles)'" />
    </ItemGroup>
    <ItemGroup>
      <File2cpp_tlog
        Include="%(File2cpp.Outputs)"
        Condition="'%(File2cpp.Outputs)' != '' and '%(File2cpp.ExcludedFromBuild)' != 'true'">
        <Source>@(File2cpp, '|')</Source>
      </File2cpp_tlog>
    </ItemGroup>
    <Message
      Importance="High"
      Text="%(File2cpp.ExecutionDescription)" />
    <WriteLinesToFile
      Condition="'@(File2cpp_tlog)' != '' and '%(File2cpp_tlog.ExcludedFromBuild)' != 'true'"
      File="$(IntDir)$(ProjectName).write.1.tlog"
      Lines="^%(File2cpp_tlog.Source);@(File2cpp_tlog-&gt;'%(Fullpath)')" />
    <WriteLinesToFile
      Condition="'@(File2cpp_tlog)' != '' and '%(File2cpp_tlog.ExcludedFromBuild)' != 'true'"
      File="$(IntDir)$(ProjectName).read.1.tlog"
      Lines="^%(File2cpp_tlog.FullPath);%(File2cpp_tlog.Inputs)" />
    <File2cpp
      Condition="'@(File2cpp)' != '' and '%(File2cpp.ExcludedFromBuild)' != 'true'"
      CommandLineTemplate="%(File2cpp.CommandLineTemplate)"
      PrecompiledHeader="%(File2cpp.PrecompiledHeader)"
      BufferName="%(File2cpp.BufferName)"
      Use64bitWords="%(File2cpp.Use64bitWords)"
      BigEndian="%(File2cpp.BigEndian)"
      File2cppOutput="%(File2cpp.File2cppOutput)"
      AdditionalOptions="%(File2cpp.AdditionalOptions)"
      EchoOff="true"      
      Inputs="%(File2cpp.Identity)" />
  </Target>
  <PropertyGroup>
    <ComputeLinkInputsTargets>
            $(ComputeLinkInputsTargets);
            ComputeFile2cppOutput;
          </ComputeLinkInputsTargets>
    <ComputeLibInputsTargets>
            $(ComputeLibInputsTargets);
            ComputeFile2cppOutput;
          </ComputeLibInputsTargets>
  </PropertyGroup>
  <Target
    Name="ComputeFile2cppOutput"
    Condition="'@(File2cpp)' != ''">
    <ItemGroup>
      <File2cppDirsToMake
        Condition="'@(File2cpp)' != '' and '%(File2cpp.ExcludedFromBuild)' != 'true'"
        Include="%(File2cpp.Outputs)" />
      <Link
        Include="%(File2cppDirsToMake.Identity)"
        Condition="'%(Extension)'=='.obj' or '%(Extension)'=='.res' or '%(Extension)'=='.rsc' or '%(Extension)'=='.lib'" />
      <Lib
        Include="%(File2cppDirsToMake.Identity)"
        Condition="'%(Extension)'=='.obj' or '%(Extension)'=='.res' or '%(Extension)'=='.rsc' or '%(Extension)'=='.lib'" />
      <ImpLib
        Include="%(File2cppDirsToMake.Identity)"
        Condition="'%(Extension)'=='.obj' or '%(Extension)'=='.res' or '%(Extension)'=='.rsc' or '%(Extension)'=='.lib'" />
    </ItemGroup>
    <MakeDir
      Directories="@(File2cppDirsToMake-&gt;'%(RootDir)%(Directory)')" />
  </Target>
</Project>
